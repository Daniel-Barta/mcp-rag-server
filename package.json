{
  "name": "mcp-rag-server",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --sourcemap --dts --clean --target=node20",
    "dev": "tsup src/index.ts --format esm --watch --sourcemap --target=node20",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "inspector:http": "powershell -NoProfile -Command \"$env:MCP_TRANSPORT=http; npx @modelcontextprotocol/inspector http://localhost:3000/mcp --transport http\"",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@xenova/transformers": "^2.17.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "tsup": "^8.3.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
